mixin pagination(url, count, onPage, perPage)
  - onPage = onPage || 1
  - perPage = perPage || 25
  - pages = Math.ceil( count / perPage )
  - onPage = parseInt(onPage)

  if count <= perPage
    return

  - url = url.replace(/(index|page)([0-9]*).html/, '')

  .row
    ul.pagination
      if onPage > 1
        li: a(href=(url + (onPage == 2 ? 'index' : 'page' + (onPage - 1)) + '.html')) &laquo; Previous
      - for(i = 0; i < pages; i++)
        li: a(href=(url + (i == 0 ? 'index' : 'page') + (i <= 0 ? '' : i + 1) + '.html'), class=(i + 1 == onPage ? 'selected' : '')) #{i + 1}
      if onPage < pages
        li: a(href=(url + 'page' + (onPage + 1) + '.html')) &raquo; Next
