doctype html
html(lang='en')
  head
    block head
      meta(charset='utf-8')
      title
        block title
          = locals.name
      link(rel='alternate', href='/feed.xml', type='application/rss+xml', title=locals.description)
      link(rel='stylesheet', href='//fonts.googleapis.com/css?family=Source+Sans+Pro|Quattrocento')
      link(rel='stylesheet', href='/css/site.css')
      block styles

      script(type="text/javascript").
        var _gaq = _gaq || [];
        _gaq.push(['_setAccount', 'UA-34394854-3']);
        _gaq.push(['_setSiteSpeedSampleRate', 100]);
        _gaq.push(['_trackPageview']);

        (function() {
          var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
          ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
          var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
        })();
  body
    include author
    include dateFormat

    .wrapper
      header
        .logo
          a(href="/")
            img(src="/images/RMPhotography.png", title="Randy Merrill Photography")
        nav.units-row
          ul.horizontal
            li.unit-20: a(href="/") Home
            li.unit-20: a(href="/archive.html") Archives
            li.unit-20: a(href="/appointment.html") Appointments
            li.unit-20: a(href="/gear.html") Gear
            li.unit-20: a(href="/pricing.html") Pricing
      #content
        block content
          h2= page.title
          section!= page.html
      footer
        .units-row
          .unit-33.sharing
            a.zocial.icon.googleplus(href="https://plus.google.com/114870301499667220446", data-category="link", data-action="click", data-value="Google+") On Google+
            a.zocial.icon.facebook(href="https://www.facebook.com/Randy.Merrill.Photography", data-category="link", data-action="click", data-value="Facebook") On Facebook
            a.zocial.icon.flickr(href="http://www.flickr.com/photos/zoramite/", data-category="link", data-action="click", data-value="Flickr") On Flickr
            a.zocial.icon.rss(href="/feed.xml", data-category="link", data-action="click", data-value="RSS") Subscribe to RSS
          .unit-33 &copy; #{ new Date().getFullYear() } 
              a(href="#{ locals.url }") Randy Merrill Photography
          .unit-33
            a(href="tel:14353634780", data-category="link", data-action="click", data-value="Telephone") 435.363.4780
    script(src="//ajax.googleapis.com/ajax/libs/jquery/1.9.0/jquery.min.js")
    script(src="/scripts/jquery.freetile.js")
    script(src="/scripts/jquery.site.js")
    block scripts
