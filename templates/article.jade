extends layout

block prepend title
  | #{ page.title } - 
  
block content
  include author

  h2= page.title

  p.posted Posted on 
    mixin dateFormat(page.metadata.date) 
    | by 
    mixin author(page.metadata.author)
    |.

  article.post
    section!= page.html
  if page.metadata.gallery
    include gallery

    mixin gallery(page.metadata.gallery)
